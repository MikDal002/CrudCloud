<h1>Czateria</h1>

<div class="container czateria">
    <div class="row">
        <div class="col-xl-8 col-md-12 col-sm-12 chat">
            <div class="col-12" id="messagesList">

            </div>
            <div class="col-12 mt-md-2">
                <div class="row">

                    <div class="col-md-8 col-sm-12 txt-area">
                        <textarea type="text" id="messageInput" placeholder="Message"></textarea>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <div class="row">
                            <input placeholder="Name" type="text" id="userInput" />
                        </div>
                        <div class="row">
                            <input class="btn btn-sm btn-primary w-100" type="button" id="sendButton" value="Send Message" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

