@model ZwinnyCRUD.Cloud.Pages.Tasks.DeleteModel
@{ 
    string referer = Request.Headers["Referer"].ToString();
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Projects/Details?id=@Model.Task.ProjectId">@Model.Task.Project.Title</a></li>
        <li class="breadcrumb-item"><a href="/Tasks/Details?id=@Model.Task.Id">@Model.Task.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

<h1>
    Delete
</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Project.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="" title="back to @Model.Task.Project.Title details" href="@referer"><i class="icon-reply"></i></a>
    </form>
</div>
