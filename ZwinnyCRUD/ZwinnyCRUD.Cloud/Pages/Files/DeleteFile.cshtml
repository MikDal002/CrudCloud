@page
@model ZwinnyCRUD.Cloud.Pages.Files.DeleteFileModel
@{
    string referer = Request.Headers["Referer"].ToString();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Projects/Details?id=@Model.Project.Id">@Model.Project.Title</a></li>
        <li class="breadcrumb-item"><a href="/Files?id=@Model.RemoveFile.Id">@Model.RemoveFile.Name</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete File</li>
    </ol>
</nav>

<h1>
    Delete
</h1>

<h3>Are you sure you want to delete this file?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemoveFile.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.RemoveFile.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemoveFile.SizeinBytes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemoveFile.SizeinBytes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemoveFile.Uploaded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemoveFile.Uploaded)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="RemoveFile.Id" />
    <div>
        <button type="submit" value="Delete" class="btn btn-danger"><i class="icon-trash-3"></i> Delete</button>
        <a class="btn btn-outline-danger" title="Cancel" href="@referer"><i class="icon-cancel"></i> Cancel</a>
    </div>
</form>