@page
@model ZwinnyCRUD.Cloud.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Projects";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Projects</li>
    </ol>
</nav>

<nav class="header-search">
    <div>
        <h1>
            Projects
            <small>
                <a class="" title="Create new project" asp-page="/Projects/Create"><i class="icon-plus"></i></a>
            </small>
        </h1>
    </div>
    <div>
        <form class="form-inline">
            <input class="form-control search mr-sm-2" type="search" placeholder="Search" aria-label="Search" asp-for="SearchString" />
            <input type="submit" class="btn btn-outline-primary my-2 my-sm-0" value="Search" />
        </form>
    </div>
</nav>


<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Project)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td class="text-right">
                    <a asp-page="/Projects/Edit" asp-route-id="@item.Id" class='' title="edit project @item.Title"><i class="icon-pencil"></i></a>
                    <a asp-page="/Projects/Delete" asp-route-id="@item.Id" class='text-danger' title="delete project @item.Title"><i class="icon-cancel"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
