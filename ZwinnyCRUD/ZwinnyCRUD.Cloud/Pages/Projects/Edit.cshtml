@page
@model ZwinnyCRUD.Cloud.Pages.Projects.EditModel

@{
    ViewData["Title"] = "Edit";
    string referer = Request.Headers["Referer"].ToString();

}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Projects">Projects</a></li>
        <li class="breadcrumb-item"><a href="/Projects/Details?id=@Model.Project.Id">@Model.Project.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Project.Id" />
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <input asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary"><i class="icon-floppy"></i> Save</button>
                <a class="btn btn-outline-danger" title="Cancel" href="@referer"><i class="icon-cancel"></i> Cancel</a>
            </div>

            <input type="hidden" asp-for="Project.CreationDate" class="form-control" />
            <input type="hidden" name="csrf_token" value="" />
            <input type="hidden" name="_method" value="put" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

